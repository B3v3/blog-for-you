<p> <%= @user.followers.count %>
    <% if current_user == @user %>
      <%= link_to 'followers!', followers_user_url(@user) %>
    <% else %>
      followers!
    <% end %>
</p>
<p> <%= @user.following.count %>
  <% if current_user == @user %>
    <%= link_to 'followed!', following_user_url(@user) %>
  <% else %>
    followed!
  <% end %>
</p>
