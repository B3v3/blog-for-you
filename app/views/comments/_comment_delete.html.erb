<% if comment.content != "Deleted by #{comment.user.nickname}" and comment.content !=
                         "Deleted by #{comment.post.user.nickname}" %>
  <% if comment.user == current_user or @post.user == current_user %>
    <%= form_for comment, url: comment_path(comment) do |f| %>
      <%= hidden_field_tag :id, comment.id %>
      <%= f.submit 'Delete' %>
    <% end %>
  <% end %>
<% end %>
